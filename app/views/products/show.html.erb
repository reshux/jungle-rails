<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          </br>
          <dt><h3>Reviews</h3></dt>
          <dd></dd>
          <% @reviews.each do |review| %>
            <%= render 'rating', rating: review.rating, description: review.description, user: review.user.first_name %>
          </br>
        <% end %>
        
        <% if current_user %>
          <h4>Leave a Review:</h4>
          <%= form_for :review, url: "#{@product.id}/reviews" do |form| %>
          <%= form.label :review %><br/>
          <%= form.text_area :description %><br/>
          <%= form.select :rating, [1, 2, 3, 4, 5] %><br/>
          <%= form.submit %><br/>
          <% end %>
        <% end %>
        </dl>
      </div>
    </div>

  </article>

</section>
